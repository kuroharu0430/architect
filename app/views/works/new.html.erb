<div class="new_product">
<%= @product.name%>
<%= image_tag @product.image.url ,class:"form-image"%>
 <p> 新規登録</p>
<%= form_with model:[@product, @work] do |f|%> 
  <div class="form">

  <%=f.label :text ,"text",class:"label"%>
  <%= f.text_field :text,class:"input"%>
  
  <%=f.label :image ,"image",class:"label"%>
  <%= f.file_field :image ,class:"field"%>

  <%= f.submit "send" ,class:"buttom"%>
  </div>
<%end%>
</div>