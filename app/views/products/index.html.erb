<%= render 'layouts/nav'%>
<div class="top">
  <div class="top__screen">
    <div class="top__screen-title">
      <h1>子どもの心に残る<br>
          空間づくりを</h1>
    </div>
  </div>
  <div class="top__image">
      <%=image_tag '/colored.jpg', class:'hand-writing'%>
  </div> 

  <div class="top__slide">
    <div class="top__slide-frame">
      <% @products.each do |product| %>
        <div class="top__slide-frame-heading">
        </div>
        <div class="heading-name"><%=product.name %></div>
        <div class="heading-title"><%=product.text%></div>

        <%=image_tag product.image.url, class:"top__slide-frame-image"%>
      <%end%>
    </div>
  </div>

</div>

<div class="works">
  <div class="cards">
  <%= render @products %>    
  </div>
</div>

<%= form_with model:@user do |f|%>
  <div class="contact">
    <h3>contact</h3>
      <%=f.label :name ,"name",class:"label"%>
      <%= f.text_field :name ,class:"input"%>

      <%=f.label :email ,"email",class:"label"%>
      <%= f.text_field :email,class:"input"%>

      <%=f.label :password ,"password",class:"label"%>
      <%= f.text_field :password,class:"input"%>

      <%=f.label :password_confirmation ,"password",class:"label"%>
      <%= f.text_field :password_confirmation,class:"input"%>

      <%= f.submit "登録" ,class:"buttom"%>
  </div>
<%end%>

